{% extends "base.jinja" %}

{% block content %}
    <h2>Login Page</h2>
    <form action="" method="post">
        {{form.hidden_tag()}}
        <p>
            {{ form.email.label }}
            {{ form.email(size=32) }}
        </p>
        <p>
            {{ form.password.label }}
            {{ form.password(size=32) }}
        </p>
        <p>
            {{ form.submit(class='btn btn-primary') }}
        </p>
    </form>
{%endblock%}